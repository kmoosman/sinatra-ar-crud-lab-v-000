<html>
  <p>Current title: <%= @article.title %> </p>
  <p>Current content: <%= @article.content %> </p>
  <form method="POST" action="/article/<%= @article.id %>">
  <p>Article title: <input type="text" name="article_title" id="title"></p>
  <p>Article content: <textarea type="text" name="article_content" id="content"> </textarea></p>
  <p><input type="submit" value="submit"></p>
  <input id='hidden' type='hidden' name='_method' value='patch'>
</form>
</html>
